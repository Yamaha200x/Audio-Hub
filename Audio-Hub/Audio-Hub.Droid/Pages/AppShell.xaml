<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Audio_Hub.Droid.Pages.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:pages="clr-namespace:Audio_Hub.Droid.Pages"
    Shell.FlyoutBehavior="Disabled"
    Shell.NavBarIsVisible="False"
    Shell.TabBarBackgroundColor="#000000"
    Shell.TabBarForegroundColor="#00C2CB"
    Shell.TabBarUnselectedColor="#808080">

    <Shell.Resources>
        <Style TargetType="TabBar">
            <Setter Property="Shell.TabBarBackgroundColor" Value="#000000" />
        </Style>
    </Shell.Resources>

    <TabBar>
        <ShellContent
            Title="Start"
            Icon="home_icon.png"
            ContentTemplate="{DataTemplate pages:HomePage}"
            Route="HomePage" />

        <ShellContent
            Title="Suche"
            Icon="search_icon.png"
            ContentTemplate="{DataTemplate pages:SearchPage}"
            Route="SearchPage" />

        <ShellContent
            Title="Bibliothek"
            Icon="library_icon.png"
            ContentTemplate="{DataTemplate pages:LibraryPage}"
            Route="LibraryPage" />

    </TabBar>

</Shell>