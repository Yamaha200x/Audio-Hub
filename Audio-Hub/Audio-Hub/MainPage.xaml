<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Audio_Hub.MainPage"
             BackgroundColor="#000000">

    <Grid VerticalOptions="Center"
          HorizontalOptions="Center">

        <VerticalStackLayout Spacing="20"
                            HorizontalOptions="Center"
                            VerticalOptions="Center">

            <!-- Logo Image - Austauschbar über Source Property -->
            <Image Source="audiohub_logo.png"
                   WidthRequest="200"
                   HeightRequest="200"
                   Aspect="AspectFit"
                   HorizontalOptions="Center"
                   VerticalOptions="Center"/>

            <!-- App Name -->
            <Label Text="AudioHub"
                   FontSize="42"
                   FontAttributes="Bold"
                   TextColor="#00C2CB"
                   HorizontalOptions="Center"
                   VerticalOptions="Center"
                   Margin="0,10,0,0"/>

        </VerticalStackLayout>

    </Grid>

</ContentPage>