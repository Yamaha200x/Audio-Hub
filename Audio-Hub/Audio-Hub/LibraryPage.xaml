                                <Image Source="album_wiped_out.png" Aspect="AspectFill"/>
                            </Frame>
                            <VerticalStackLayout Grid.Column="1" VerticalOptions="Center" Spacing="3">
                                <Label Text="Wiped Out!" FontSize="16" FontAttributes="Bold" TextColor="White"/>
                                <Label Text="The Neighbourhood" FontSize="13" TextColor="#999999"/>
                            </VerticalStackLayout>
                            <ImageButton Grid.Column="2" Source="more_icon.png" 
                                        WidthRequest="24" HeightRequest="24" BackgroundColor="Transparent"/>
                        </Grid>
                    </Frame>

                    <Frame Padding="10" BackgroundColor="Transparent" HasShadow="False">
                        <Grid ColumnDefinitions="60,*,Auto" ColumnSpacing="15">
                            <Frame Grid.Column="0" Padding="0" CornerRadius="8" IsClippedToBounds="True" 
                                   HasShadow="False" WidthRequest="60" HeightRequest="60">
                                <Image Source="playlist_bloom.png" Aspect="AspectFill"/>
                            </Frame>
                            <VerticalStackLayout Grid.Column="1" VerticalOptions="Center" Spacing="3">
                                <Label Text="Bloom" FontSize="16" FontAttributes="Bold" TextColor="White"/>
                                <Label Text="Machine Gun Kelly" FontSize="13" TextColor="#999999"/>
                            </VerticalStackLayout>
                            <ImageButton Grid.Column="2" Source="more_icon.png" 
                                        WidthRequest="24" HeightRequest="24" BackgroundColor="Transparent"/>
                        </Grid>
                    </Frame>
                </VerticalStackLayout>

                <!-- ARTISTS VIEW -->
                <VerticalStackLayout x:Name="ArtistsView" IsVisible="False" Spacing="15">

                    <!-- Sort Controls -->
                    <Grid ColumnDefinitions="Auto,*,Auto" Margin="0,0,0,10">
                        <Label Grid.Column="0" Text="Sort By" FontSize="14" 
                               TextColor="White" VerticalOptions="Center"/>
                        <Label Grid.Column="2" Text="Recently played ↓" FontSize="14" 
                               TextColor="#00C2CB" VerticalOptions="Center"/>
                    </Grid>

                    <!-- Artist Items (mit rundem Bild) -->
                    <Frame Padding="10" BackgroundColor="Transparent" HasShadow="False">
                        <Grid ColumnDefinitions="70,*,Auto" ColumnSpacing="15">
                            <Frame Grid.Column="0" Padding="0" CornerRadius="35" IsClippedToBounds="True" 
                                   HasShadow="False" WidthRequest="70" HeightRequest="70">
                                <Image Source="artist_conan_gray.png" Aspect="AspectFill"/>
                            </Frame>
                            <Label Grid.Column="1" Text="Conan Gray" FontSize="18" 
                                   FontAttributes="Bold" TextColor="White" VerticalOptions="Center"/>
                            <ImageButton Grid.Column="2" Source="more_icon.png" 
                                        WidthRequest="24" HeightRequest="24" BackgroundColor="Transparent"/>
                        </Grid>
                    </Frame>

                    <Frame Padding="10" BackgroundColor="Transparent" HasShadow="False">
                        <Grid ColumnDefinitions="70,*,Auto" ColumnSpacing="15">
                            <Frame Grid.Column="0" Padding="0" CornerRadius="35" IsClippedToBounds="True" 
                                   HasShadow="False" WidthRequest="70" HeightRequest="70">
                                <Image Source="artist_chase_atlantic.png" Aspect="AspectFill"/>
                            </Frame>
                            <Label Grid.Column="1" Text="Chase Atlantic" FontSize="18" 
                                   FontAttributes="Bold" TextColor="White" VerticalOptions="Center"/>
                            <ImageButton Grid.Column="2" Source="more_icon.png" 
                                        WidthRequest="24" HeightRequest="24" BackgroundColor="Transparent"/>
                        </Grid>
                    </Frame>

                    <Frame Padding="10" BackgroundColor="Transparent" HasShadow="False">
                        <Grid ColumnDefinitions="70,*,Auto" ColumnSpacing="15">
                            <Frame Grid.Column="0" Padding="0" CornerRadius="35" IsClippedToBounds="True" 
                                   HasShadow="False" WidthRequest="70" HeightRequest="70">
                                <Image Source="artist_beabadoobee.png" Aspect="AspectFill"/>
                            </Frame>
                            <Label Grid.Column="1" Text="beabadoobee" FontSize="18" 
                                   FontAttributes="Bold" TextColor="White" VerticalOptions="Center"/>
                            <ImageButton Grid.Column="2" Source="more_icon.png" 
                                        WidthRequest="24" HeightRequest="24" BackgroundColor="Transparent"/>
                        </Grid>
                    </Frame>

                    <Frame Padding="10" BackgroundColor="Transparent" HasShadow="False">
                        <Grid ColumnDefinitions="70,*,Auto" ColumnSpacing="15">
                            <Frame Grid.Column="0" Padding="0" CornerRadius="35" IsClippedToBounds="True" 
                                   HasShadow="False" WidthRequest="70" HeightRequest="70">
                                <Image Source="artist_new_jeans.png" Aspect="AspectFill"/>
                            </Frame>
                            <Label Grid.Column="1" Text="New Jeans" FontSize="18" 
                                   FontAttributes="Bold" TextColor="White" VerticalOptions="Center"/>
                            <ImageButton Grid.Column="2" Source="more_icon.png" 
                                        WidthRequest="24" HeightRequest="24" BackgroundColor="Transparent"/>
                        </Grid>
                    </Frame>

                    <Frame Padding="10" BackgroundColor="Transparent" HasShadow="False">
                        <Grid ColumnDefinitions="70,*,Auto" ColumnSpacing="15">
                            <Frame Grid.Column="0" Padding="0" CornerRadius="35" IsClippedToBounds="True" 
                                   HasShadow="False" WidthRequest="70" HeightRequest="70">
                                <Image Source="artist_keshi.png" Aspect="AspectFill"/>
                            </Frame>
                            <Label Grid.Column="1" Text="Keshi" FontSize="18" 
                                   FontAttributes="Bold" TextColor="White" VerticalOptions="Center"/>
                            <ImageButton Grid.Column="2" Source="more_icon.png" 
                                        WidthRequest="24" HeightRequest="24" BackgroundColor="Transparent"/>
                        </Grid>
                    </Frame>
                </VerticalStackLayout>

                <!-- ALBUMS VIEW -->
                <VerticalStackLayout x:Name="AlbumsView" IsVisible="False" Spacing="15">

                    <!-- Your Liked Albums Header -->
                    <Grid ColumnDefinitions="Auto,*" Margin="0,0,0,5">
                        <Frame Grid.Column="0" WidthRequest="40" HeightRequest="40" Padding="0"
                               BackgroundColor="#00C2CB" CornerRadius="20" HasShadow="False" Margin="0,0,10,0">
                            <Label Text="♡" FontSize="22" TextColor="Black" 
                                   HorizontalOptions="Center" VerticalOptions="Center"/>
                        </Frame>
                        <Label Grid.Column="1" Text="Your Liked Albums" FontSize="18" 
                               FontAttributes="Bold" TextColor="White" VerticalOptions="Center"/>
                    </Grid>

                    <Label Text="↓ Recently added" FontSize="14" TextColor="#00C2CB" Margin="0,5,0,5"/>

                    <!-- Album Items -->
                    <Frame Padding="10" BackgroundColor="Transparent" HasShadow="False">
                        <Grid ColumnDefinitions="60,*,Auto" ColumnSpacing="15">
                            <Frame Grid.Column="0" Padding="0" CornerRadius="8" IsClippedToBounds="True" 
                                   HasShadow="False" WidthRequest="60" HeightRequest="60">
                                <Image Source="album_supernache.png" Aspect="AspectFill"/>
                            </Frame>
                            <VerticalStackLayout Grid.Column="1" VerticalOptions="Center" Spacing="3">
                                <Label Text="Supernache" FontSize="16" FontAttributes="Bold" TextColor="White"/>
                                <Label Text="Conan Gray" FontSize="13" TextColor="#999999"/>
                            </VerticalStackLayout>
                            <ImageButton Grid.Column="2" Source="more_icon.png" 
                                        WidthRequest="24" HeightRequest="24" BackgroundColor="Transparent"/>
                        </Grid>
                    </Frame>

                    <Frame Padding="10" BackgroundColor="Transparent" HasShadow="False">
                        <Grid ColumnDefinitions="60,*,Auto" ColumnSpacing="15">
                            <Frame Grid.Column="0" Padding="0" CornerRadius="8" IsClippedToBounds="True" 
                                   HasShadow="False" WidthRequest="60" HeightRequest="60">
                                <Image Source="album_dawn_fm.png" Aspect="AspectFill"/>
                            </Frame>
                            <VerticalStackLayout Grid.Column="1" VerticalOptions="Center" Spacing="3">
                                <Label Text="DAWN FM" FontSize="16" FontAttributes="Bold" TextColor="White"/>
                                <Label Text="The Weeknd" FontSize="13" TextColor="#999999"/>
                            </VerticalStackLayout>
                            <ImageButton Grid.Column="2" Source="more_icon.png" 
                                        WidthRequest="24" HeightRequest="24" BackgroundColor="Transparent"/>
                        </Grid>
                    </Frame>

                    <Frame Padding="10" BackgroundColor="Transparent" HasShadow="False">
                        <Grid ColumnDefinitions="60,*,Auto" ColumnSpacing="15">
                            <Frame Grid.Column="0" Padding="0" CornerRadius="8" IsClippedToBounds="True" 
                                   HasShadow="False" WidthRequest="60" HeightRequest="60">
                                <Image Source="album_planet_her.png" Aspect="AspectFill"/>
                            </Frame>
                            <VerticalStackLayout Grid.Column="1" VerticalOptions="Center" Spacing="3">
                                <Label Text="Planet Her" FontSize="16" FontAttributes="Bold" TextColor="White"/>
                                <Label Text="Doja Cat" FontSize="13" TextColor="#999999"/>
                            </VerticalStackLayout>
                            <ImageButton Grid.Column="2" Source="more_icon.png" 
                                        WidthRequest="24" HeightRequest="24" BackgroundColor="Transparent"/>
                        </Grid>
                    </Frame>

                    <Frame Padding="10" BackgroundColor="Transparent" HasShadow="False">
                        <Grid ColumnDefinitions="60,*,Auto" ColumnSpacing="15">
                            <Frame Grid.Column="0" Padding="0" CornerRadius="8" IsClippedToBounds="True" 
                                   HasShadow="False" WidthRequest="60" HeightRequest="60">
                                <Image Source="album_wiped_out.png" Aspect="AspectFill"/>
                            </Frame>
                            <VerticalStackLayout Grid.Column="1" VerticalOptions="Center" Spacing="3">
