                                <Image Source="podcast_baking_mystery.png" Aspect="AspectFill"/>
                            </Frame>
                            <VerticalStackLayout Grid.Column="1" VerticalOptions="Center" Spacing="3">
                                <Label Text="Baking a Mystery" FontSize="16" FontAttributes="Bold" TextColor="White"/>
                                <Label Text="Baking Pr • Unlimited Kat" FontSize="13" TextColor="#999999"/>
