                            <VerticalStackLayout Grid.Column="1" VerticalOptions="Center" Spacing="3">
                                <Label Text="random>" FontSize="16" FontAttributes="Bold" TextColor="White"/>
                                <Label Text="8 Playlists" FontSize="13" TextColor="#999999"/>
                            </VerticalStackLayout>
                            <ImageButton Grid.Column="2" Source="more_icon.png" 
                                        WidthRequest="24" HeightRequest="24" BackgroundColor="Transparent"/>
                        </Grid>
